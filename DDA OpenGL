#include<GL/gl.h>
#include<GL/glut.h>

float x1,x2,y1,y2;

void display(void)
{
  float dy,dx,step,x,y,k,xin,yin;
  dx = x2-x1;
  dy = y2-y1;
  if(abs(dx) > abs(dy)) {
      step = abs(dx);
      } else
      step = abs(dy);
      
      xin = dx / step;
      yin = dy / step;
      x = x1;
      y = y1;
      
      glBegin(GL_POINTS);
      glVertex2f(x,y);
      glEnd();
      
      for(k=1; k <= step; k++) {
       x = x + xin;
       y = y + yin;
       
      glBegin(GL_POINTS);
      glVertex2f(x,y);
      glEnd();
      }
      glFlush();  
    }
    
     
    
    
     
      
